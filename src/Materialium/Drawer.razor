<aside class="@GetClass()">
    @ChildContent
</aside>

@functions {

    [Parameter]
    RenderFragment ChildContent { get; set; }

    [Parameter]
    bool Modal { get; set; }

    [Parameter]
    bool Dismissible { get; set; }

    [Parameter]
    bool Open { get; set; }

    [Parameter]
    bool Opening { get; set; }

    [Parameter]
    bool Closing { get; set; }

    [Parameter]
    string Class { get; set; }

    private string GetClass()
    {
        List<string> classes = new List<string> { "mdc-drawer" };

        if (Modal)
        {
            classes.Add("mdc-drawer--modal");
        }

        if (Dismissible)
        {
            classes.Add("mdc-drawer--dismissible");
        }

        if (Open)
        {
            classes.Add("mdc-drawer--open");
        }

        if (Opening)
        {
            classes.Add("mdc-drawer--opening");
        }

        if (Closing)
        {
            classes.Add("mdc-drawer--closing");
        }


        if (!string.IsNullOrWhiteSpace(Class))
        {
            classes.Add(Class.Trim());
        }

        return string.Join(" ", classes);
    }
}
