@using Microsoft.JSInterop
@inject IJSRuntime jsRuntime

<aside ref="drawerElem" class="@GetClass()">
    @ChildContent
</aside>

@functions {

    [Parameter]
    RenderFragment ChildContent { get; set; }

    [Parameter]
    bool Modal { get; set; }

    [Parameter]
    bool Dismissible { get; set; }

    [Parameter]
    string Class { get; set; }

    private string GetClass()
    {
        List<string> classes = new List<string> { "mdc-drawer" };

        if (Modal)
        {
            classes.Add("mdc-drawer--modal");
        }

        if (Dismissible)
        {
            classes.Add("mdc-drawer--dismissible");
        }


        if (!string.IsNullOrWhiteSpace(Class))
        {
            classes.Add(Class.Trim());
        }

        return string.Join(" ", classes);
    }

    [Parameter] bool IsOpen { get; set; }

    ElementRef drawerElem;

    protected override async Task OnAfterRenderAsync()
    {
        await jsRuntime.InvokeAsync<object>("Materialium.drawer.init", drawerElem, IsOpen);
    }
}
