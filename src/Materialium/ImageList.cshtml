<ul class="@GetClass()" style="@Style">
    @ChildContent
</ul>

@functions {

    [Parameter]
    RenderFragment ChildContent { get; set; }

    [Parameter]
    bool Masonry { get; set; }

    [Parameter]
    bool WithTextProtection { get; set; }

    [Parameter]
    string Class { get; set; }

    [Parameter]
    string Style { get; set; }


    private string GetClass()
    {
        List<string> classes = new List<string> { "mdc-image-list" };

        if (Masonry)
        {
            classes.Add("mdc-image-list--masonry");
        }

        if (WithTextProtection)
        {
            classes.Add("mdc-image-list--with-text-protection");
        }

        if (!string.IsNullOrWhiteSpace(Class))
        {
            classes.Add(Class.Trim());
        }

        return string.Join(" ", classes);
    }
}