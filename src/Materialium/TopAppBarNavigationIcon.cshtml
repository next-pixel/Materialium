<button class="@GetClass()" onclick="@OnClick">@ChildContent</button>

@functions {

    [Parameter]
    RenderFragment ChildContent { get; set; } = (b) => b.AddContent(0, "menu");

    [Parameter]
    EventCallback<UIMouseEventArgs> OnClick { get; set; }

    [Parameter]
    string Class { get; set; } = "material-icons";

    private string GetClass()
    {
        List<string> classes = new List<string> { "mdc-top-app-bar__navigation-icon" };

        if (!string.IsNullOrWhiteSpace(Class))
        {
            classes.Add(Class.Trim());
        }

        return string.Join(" ", classes);
    }
}