@if (TabIndex == null)
{
    <div class="@GetClass()">
        @ChildContent
    </div>
}
else
{
    <div class="@GetClass()" tabindex="@TabIndex">
        @ChildContent
    </div>
}

@functions {

    [Parameter]
    RenderFragment ChildContent { get; set; }

    [Parameter]
    int? TabIndex { get; set; }

    [Parameter]
    string Class { get; set; }

    private string GetClass()
    {
        List<string> classes = new List<string> { "mdc-card__primary-action" };

        if (!string.IsNullOrWhiteSpace(Class))
        {
            classes.Add(Class.Trim());
        }

        return string.Join(" ", classes);
    }
}