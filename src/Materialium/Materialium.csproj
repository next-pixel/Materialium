<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Version>0.0.0.27</Version>
    <AssemblyVersion>0.0.0.27</AssemblyVersion>
    <FileVersion>0.0.0.27</FileVersion>
    <Authors>Mahdi K. Fard</Authors>
    <Company>Mahdi K. Fard</Company>
    <Description>Material Design Components for Web (MDC-Web) library for ASP.NET Core 3.0 Razor Components.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>- Adds DrawerScrim.</PackageReleaseNotes>
    <PackageTags>MDC MDC-Web Material Material-Design .NET-Core Razor Component</PackageTags>
    <PackageProjectUrl>https://github.com/xclud/Materialium</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.0.0-preview4-19123-01" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Build" Version="3.0.0-preview4-19123-01" PrivateAssets="all" />
  </ItemGroup>
</Project>
